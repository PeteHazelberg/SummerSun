@model SummerSunMVC.Models.SingleCompanyPointStatusVM


<table class="table table-striped table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PointsStatus.FirstOrDefault().EquipmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PointsStatus.FirstOrDefault().EquipmentType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PointsStatus.FirstOrDefault().PointRole)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PointsStatus.FirstOrDefault().UoM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PointsStatus.FirstOrDefault().LastValue)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.PointsStatus)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EquipmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EquipmentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PointRole)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UoM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastValue) (Max -> last value cooming soon)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { Model.SelectedCompany, item.PointId }, new { @class = "btn btn-info btn-xs" })
            </td>

        </tr>
    }

</table>
